<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".store">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0044FF"
            android:orientation="horizontal">

            <Button
                android:id="@+id/TOP_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0077FF"
                android:text="HOME"
                android:textColor="#EEEEEE"
                tools:text="HOME" />

            <TextView
                android:id="@+id/TOP_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="手机靓号不想要吗"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                tools:text="手机靓号不想要吗" />

            <Button
                android:id="@+id/TOP_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#0077FF"
                android:text="历史"
                android:textColor="#EEEEEE"
                tools:text="历史" />

        </LinearLayout>

        <!--<Gallery-->
            <!--android:id="@+id/gallery"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="200dp"-->

            <!--android:spacing="5px" />-->
        <AdapterViewFlipper
            android:id="@+id/flipper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_alignParentTop="true"
            android:flipInterval="5000" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#0000FF"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_1"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="靓号套餐"
                android:textAlignment="center"
                android:textColor="#EEEEEE"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="选三个号送你一个号"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    tools:text="选三个号送你一个号" />

                <TextView
                    android:id="@+id/text_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="消费满300元，送你一个经典号码"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    tools:text="消费满300元，送你一个经典号码" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/test_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="选三个号送你一个号"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    tools:text="选三个号送你一个号" />

                <TextView
                    android:id="@+id/test_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="消费满300元，送你一个经典号码"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    tools:text="消费满300元，送你一个经典号码" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_6"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="靓号套餐"
                android:textAlignment="center"
                android:textColor="#EEEEEE"
                tools:text="靓号套餐" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:gravity="center"
                android:text="靓号套餐"
                android:textAlignment="center"
                android:textColor="#EEEEEE"
                tools:text="靓号套餐" />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="选三个号送你一个号"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    tools:text="选三个号送你一个号" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:gravity="center"
                    android:text="消费满300元，送你一个经典号码"
                    android:textAlignment="center"
                    android:textColor="#EEEEEE"
                    tools:text="消费满300元，送你一个经典号码" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>